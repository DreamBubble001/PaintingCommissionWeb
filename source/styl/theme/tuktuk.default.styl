@import url("http://fonts.googleapis.com/css?family=Roboto:100,100italic,300,300italic,400")

body
  color: COLOR
  background: BACKGROUND
  font-size: 16px
  font-family: FONT-FAMILY, "Helvetica Neue", Helvetica, sans-serif
  font-weight: FONT-WEIGHT

  /* ====================== LINKS ====================== */
  a
    color: COLOR
    &:not(.button):hover, &:not(.button):active
      color: THEME

  /* ====================== BACKGROUNDS ====================== */
  .bck
    &.light
      background-color: LIGHT
    &.dark
      background-color: DARK
    &.theme
      background-color: THEME
    &.theme, &.dark
      color: WHITE
      a
        color: WHITE
        &:not(.button):hover, &:not(.button):active
          color: WHITE

  /* ================================= TEXT ================================ */
  .text
    &.shadow
      text-shadow 0 1px 1px rgba(0,0,0,0.5)
  .color
    &.white
      color: WHITE !important
    &:not(.bck).theme
      color: THEME !important
    &.default
      color: COLOR !important
  strong
    font-weight: 700 !important
